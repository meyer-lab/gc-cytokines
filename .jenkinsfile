pipeline {
  agent any
  stages {
    stage('Clean') {
      steps {
        sh 'git clean -ffdx'
        sh 'make clean'
      }
    }
    stage('Build') {
      steps { sh 'make all' }
    }
    stage('Test'){
      steps {
        sh 'make test'
      }
    }
    stage('Report') {
      steps {
        step([
          $class: 'TasksPublisher',
          canComputeNew: false,
          defaultEncoding: '', 
          excludePattern: '',
          healthy: '',
          high: 'TODO,FIXME,XXX',
          low: '',
          normal: 'CITE',
          pattern: '**/*.py, **/*.md',
          unHealthy: ''])
      }
    }
  }
}
