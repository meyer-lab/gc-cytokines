pipeline {
  agent { label 'docker' }
  options {
    timeout(time: 1, unit: 'HOURS')
    parallelsAlwaysFailFast()
  }
  stages {
    stage('Clean') { steps { sh 'git clean -ffdx && make clean && git submodule update --init --recursive' } }
    stage('Venv') { steps { sh 'make venv && make ckine/ckine.so' } }
    stage('Run') {
      parallel {
        stage('Test') {
          steps {
            sh 'make testcover'
            junit allowEmptyResults: false, testResults: 'junit.xml'
            cobertura coberturaReportFile: 'coverage.xml', failUnhealthy: false, failUnstable: false, maxNumberOfBuilds: 0, onlyStable: false, sourceEncoding: 'ASCII', zoomCoverageChart: false
          }
        }
        stage('Spellcheck') {
          steps {
            sh 'make spell'
          }
        }
        stage('Lint') {
          steps {
            sh 'make pylint.log'
            recordIssues qualityGates: [[threshold: 1, type: 'TOTAL_HIGH', unstable: true], [threshold: 1, type: 'TOTAL_NORMAL', unstable: true], [threshold: 30, type: 'TOTAL_LOW', unstable: true]], tools: [pyLint(pattern: 'pylint.log')]
          }
        }
        stage('Build') {
          steps {
            sh 'make -j 9'
            archiveArtifacts artifacts: 'Manuscript/Figures/*.pdf, Manuscript/Manuscript.pdf', onlyIfSuccessful: true
          }
        }
      }
    }
  }
  post {
    always {
      cleanWs cleanWhenFailure: false, cleanWhenNotBuilt: false, cleanWhenUnstable: false
    }
	}
}
